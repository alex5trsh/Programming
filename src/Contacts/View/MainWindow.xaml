<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="Contacts" Height="450" Width="569" MaxWidth="569" MaxHeight="450">
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="370"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <GroupBox x:Name="EditContactGroupBox" Header="EditContact" Grid.Column="0" Grid.Row="0">
            <StackPanel x:Name="EditContactStackPanel">
                <Label x:Name="EditNameLabel" Content="Name:" Height="29" Width="66" HorizontalAlignment="Left"/>
                <TextBox x:Name="NameTextBox"  Text="{Binding Path=Name, UpdateSourceTrigger=PropertyChanged}"  Width="230" HorizontalAlignment="Left"/>
                <Label x:Name="EditPhoneNumberLabel" Content="Phone Number:" Height="29" Width="101" HorizontalAlignment="Left"/>
                <TextBox x:Name="PhoneNumberTextBox"  Text="{Binding Path=NumberPhone, UpdateSourceTrigger=PropertyChanged}" Width="230" HorizontalAlignment="Left"/>
                <Label x:Name="EditEmailLabel" Content="Email:" Height="29"/>
                <TextBox x:Name="EmailTextBox" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Width="230" HorizontalAlignment="Left"/>
            </StackPanel>
        </GroupBox>
        <GroupBox x:Name="ReadContactGroupBox" Header="ReadContact" Grid.Row="0" Grid.ColumnSpan="2" Margin="284,0,0,0">
            <StackPanel x:Name="ReadContactStackPanel">
                <Label x:Name="ReadNameLabel" Content="Name:" Height="23" HorizontalAlignment="Left"/>
                <Label x:Name="NameLabel" Content="{Binding Name}" Height="24" FontWeight="Bold"/>
                <Label x:Name="ReadPhoneNumberLabel" Content="Phone Number:" Height="23"/>
                <Label x:Name="PhoneNumberLabel" Content="{Binding NumberPhone}" Height="24" FontWeight="Bold"/>
                <Label x:Name="ReadEmailLabel" Content="Email:" Height="23"/>
                <Label x:Name="EmailLabel" Content="{Binding Email}" Height="25" FontWeight="Bold" HorizontalAlignment="Left"/>
            </StackPanel>
        </GroupBox>
        <Button x:Name="SaveButton"  Command="{Binding SaveCommand}" Content="Save" Margin="118,0,0,0" HorizontalAlignment="Left" Width="76" Height="25" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1"/>
        <Button x:Name="LoadButton" Command="{Binding LoadCommand}" Content="Load" Margin="198,0,0,0" HorizontalAlignment="Left" Width="76" Height="25" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1"/>
    </Grid>
</Window>
 